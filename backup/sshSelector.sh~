#!/bin/bash

echo "--------------------------"
echo "|   Choose where to go   |"
echo "--------------------------"
echo "1: NGS"
echo "2: SHIWA Portal		PROD"
echo "3: CPC Bugzilla		PROD"
echo "4: MAVEN Repository	PROD"
echo "5: Submission Service	PROD"
echo "6: Submission Service	TEST"
echo "7: SHIWA Repository	TEST"
echo "8: SHIWA Portal		TEST"
echo "9: gUSE Portal		TEST"
echo "*: this machine"
echo
echo "Your choice? "
read choice

USER="NONE"
SSH_TO="NO_SSH"
EXTRA_PARAM=""
case "$choice" in
	1)	SSH_TO="ngs.wmin.ac.uk"
		USER="meilhab"
		EXTRA_PARAM=" -i $HOME/.ssh/sshGeneratedKey"
	;;
	2)	SSH_TO="10.0.4.22"
		USER="root"
		if [ $(ps -ef | grep "openvpn" | grep -v "grep" | wc -l) -lt 1 ]; then
			sudo service openvpn restart
			sleep 5
		fi
	;;
	3)	SSH_TO="161.74.26.41"
		USER="root"
		EXTRA_PARAM=" -i $HOME/.ssh/sshGeneratedKey"
	;;
	4)	SSH_TO="161.74.26.36"
		USER="root"
		EXTRA_PARAM=" -i $HOME/.ssh/sshGeneratedKey"
	;;
	5)	SSH_TO="161.74.26.48"
		USER="root"
		EXTRA_PARAM=" -i $HOME/.ssh/sshGeneratedKey"
	;;
	6)	SSH_TO="161.74.26.47"
		USER="root"
		EXTRA_PARAM=" -i $HOME/.ssh/sshGeneratedKey"
	;;
	7)	SSH_TO="161.74.26.14"
		USER="root"
		EXTRA_PARAM=" -i $HOME/.ssh/sshGeneratedKey"
	;;
	8)	SSH_TO="161.74.26.52"
		USER="root"
	;;
	9)	SSH_TO="161.74.26.58"
		USER="root"
		EXTRA_PARAM=" -i $HOME/.ssh/sshGeneratedKey"
	;;
esac

if [ "$SSH_TO" != "NO_SSH" ]; then
	ssh $USER@$SSH_TO $EXTRA_PARAM
fi
